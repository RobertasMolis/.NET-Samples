@model EfCoreShop.Dtos.CreateShopItem

@using (Html.BeginForm("Add", "ShopItem", FormMethod.Post))
{
    @Html.LabelFor(a => a.Shopitem.Name)
    @Html.TextBoxFor(a => a.Shopitem.Name)
    @Html.ValidationMessageFor(a => a.Shopitem.Name)

    @Html.LabelFor(a => a.Shopitem.Shop)
    @Html.DropDownListFor(a => a.Shopitem.Shop, new SelectList(@Model.AllShops, "Id", "Name"))
    @Html.ValidationMessageFor(a => a.Shopitem.Shop)

    

    <input type="submit" value="Submit"/>
}